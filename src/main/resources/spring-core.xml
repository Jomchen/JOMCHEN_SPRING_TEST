<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customer00" class="com.jomchen.springtest.entity.basedata.Customer">
        <constructor-arg index="0" type="java.lang.Integer" value="3"/>
        <constructor-arg index="1" type="java.lang.Integer" value="22"/>
        <constructor-arg index="2" type="java.lang.String" value="Linux"/>
        <constructor-arg index="3" type="java.lang.String" value="北京"/>
        <constructor-arg index="4" type="java.util.Date">
            <null/>
        </constructor-arg>
    </bean>

    <bean id="kongfu00" class="com.jomchen.springtest.entity.basedata.Kongfu">
        <property name="kid" value="9"/>
        <property name="name">
            <idref bean="customer00"/>
        </property>
        <property name="level" value="999"/>
        <property name="founder" ref="customer00"/>
    </bean>

    <!-- 这仅仅是个由工厂返回的实体，这个实体指明了容器的名字和生成这个实体的方法 -->
    <bean id="staticCustomer" class="com.jomchen.springtest.interfaces.basedata.impl.CustomerServiceImpl"  factory-method="getStaticCustomer"/>

    <!-- 这是一个容器 -->
    <bean id="customerServiceImpl" class="com.jomchen.springtest.interfaces.basedata.impl.CustomerServiceImpl">
        <property name="customer" ref="customer00"/>
    </bean>
    <!-- 这是仅仅是个实体，指明了生产这个实体的容器名和方法名 -->
    <bean id="myCustomer" factory-bean="customerServiceImpl" factory-method="getCustomer"/>

    <!-- 学到 7.4.2 -->

</beans>